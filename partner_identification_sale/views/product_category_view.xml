<odoo>
    <record id="product_category_form_identification_sale" model="ir.ui.view">
        <field name="name">product.category.from.view.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="after">
                <group string="Partner ID Requirements" name="require_sale" col="2">
                    <field
                        name="require_id_sale_ids"
                        widget="many2many_tags"
                        options="{'color_field': 'color'}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
