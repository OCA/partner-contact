<odoo>
    <record id="product_template_form_identification_sale" model="ir.ui.view">
        <field name="name">product.template.from.view.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='general_information']//group[1]"
                position="after"
            >
                <group string="Partner ID Requirements" name="require_sale" col="2">
                    <field
                        name="require_id_sale_ids"
                        widget="many2many_tags"
                        options="{'color_field': 'color'}"
                    />
                </group>
            </xpath>
        </field>
    </record>
</odoo>
