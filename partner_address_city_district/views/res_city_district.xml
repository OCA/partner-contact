<odoo>

<record id="res_city_district_view_form" model="ir.ui.view">
    <field name="model">res.city.district</field>
    <field name="arch" type="xml">
        <form>
            <group>
                <field name="name" />
                <field name="city_id" />
            </group>
        </form>
    </field>
</record>

<record id="res_city_district_view_tree" model="ir.ui.view">
    <field name="model">res.city.district</field>
    <field name="arch" type="xml">
        <tree editable="top">
            <field name="name" />
            <field name="city_id" />
            <field name="country_id" />
        </tree>
    </field>
</record>

<record id="res_city_district_view_search" model="ir.ui.view">
    <field name="model">res.city.district</field>
    <field name="arch" type="xml">
        <search>
            <field name="name" />
            <field name="city_id" />
            <field name="country_id" />
        </search>
    </field>
</record>

</odoo>
