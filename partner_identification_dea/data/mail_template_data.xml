<odoo>
    <record id="email_template_dea_notification" model="mail.template">
        <field name="name">DEA Expiring Notification</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="email_to">${object.email}</field>
        <field name="email_from">${(user.company_id.email)}</field>
        <field name="subject">DEA Expiring Notification</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <b>${object.name}</b>,
                    <br />
                    This notification is to inform you that your DEA Number expires on <b
                    >${object.dea_expired_date}</b>.
                    <br />
                    Please provide an updated number as soon as possible.
                    <br />
                    Thank you.
                </p>
            </div>
        </field>
        <field name="lang">${object.lang}</field>
        <field name="auto_delete" eval="True" />
    </record>

    <record id="email_template_medical_notification" model="mail.template">
        <field name="name">Medical License Expiring Notification</field>
        <field name="model_id" ref="base.model_res_partner" />
        <field name="email_from">${(user.company_id.email)}</field>
        <field name="email_to">${object.email}</field>
        <field name="subject">Medical License Notification</field>
        <field name="body_html" type="html">
            <div style="margin: 0px; padding: 0px;">
                <p style="margin: 0px; padding: 0px; font-size: 13px;">
                    Dear <b>${object.name}</b>,
                    <br />
                    This notification is to inform you that your Medical License expires on <b
                    >${object.medical_license_expired_date}</b>.
                    <br />
                    Please provide an updated number as soon as possible.
                    <br />
                    Thank you.
                </p>
            </div>
        </field>
        <field name="lang">${object.lang}</field>
        <field name="auto_delete" eval="True" />
    </record>
</odoo>
