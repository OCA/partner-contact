<data>
    <record id="view_partner_form_add_affiliate" model="ir.ui.view">
        <field name="name">Add button to see child affiliate contacts full form</field>
        <field name="model">res.partner</field>
        <field
            name="inherit_id"
            ref="partner_affiliate.view_partner_form_add_affiliate"
        />
        <field name="arch" type="xml">
            <!-- Make child kanban able to open form in full view -->
            <xpath
                expr="//field[@name='affiliate_ids']/kanban/templates//field[@name='name']"
                position="after"
            >
                <button
                    class="btn btn-link"
                    type="object"
                    name="open_child_form"
                    title="Open full form"
                >
                    <i class="fa fa-external-link-square" />
                </button>
            </xpath>
        </field>
    </record>
</data>
