<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="parish_view_partner_form" model="ir.ui.view">
      <field name="name">parish.partner.view</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form" />
      <field name="arch" type="xml">
        <field name="street2" position="after">
          <field name="country_enforce_parishes" invisible="1" />
          <field
                    name="parish_id"
                    placeholder="Parish..."
                    class="o_address_street"
                    options="{'no_open': True, 'no_create': True}"
                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible': [('country_enforce_parishes', '=', False)]}"
                />
        </field>
      </field>
    </record>


    <record id="parish_view_partner_address_form" model="ir.ui.view">
      <field name="name">parish.res.partner.form.address</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_address_form" />
      <field name="arch" type="xml">
        <field name="street2" position="after">
          <field name="country_enforce_parishes" invisible="1" />
          <field
                    name="parish_id"
                    placeholder="Parish..."
                    class="o_address_street"
                    options="{'no_open': True, 'no_create': True}"
                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible': [('country_enforce_parishes', '=', False)]}"
                />
        </field>
      </field>
    </record>

    <record id="parish_res_partner_view_form_private" model="ir.ui.view">
      <field name="name">parish.res.partner.form.private</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.res_partner_view_form_private" />
      <field name="arch" type="xml">
          <field name="street2" position="after">
            <field name="country_enforce_parishes" invisible="1" />
            <field
                    name="parish_id"
                    placeholder="Parish..."
                    class="o_address_street"
                    options="{'no_open': True, 'no_create': True}"
                    attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)], 'invisible': [('country_enforce_parishes', '=', False)]}"
                />
          </field>
      </field>
    </record>
</odoo>
