<odoo>
    <record id="view_general_configuration" model="ir.ui.view">
        <field name="name">phone_validation_format</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='companies']" position='after'>
                <h2>Phone validation</h2>
                <div
                    class="row mt16 o_settings_container"
                    name="phone_validation_format"
                >
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_right_pane">
                            <label for="phone_validation_format" />
                            <div class="text-muted">
                                Choose which format to use for phone validation
                            </div>
                            <div class="content-group">
                                <div class="mt16">
                                    <label
                                        for="phone_validation_format"
                                        class="o_light_label"
                                    />
                                    <field
                                        name="phone_validation_format"
                                        class="oe_inline"
                                    />
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="phone_validation_exception" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="phone_validation_exception" />
                            <div class="text-muted">
                                Should exception be raised in case phone number is incorrect ?
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
