<odoo>

    <record model="ir.ui.view" id="res_partner_hobby_form_view">
        <field name="name">res.partner.hobby.form (in partner_contact_hobby)</field>
        <field name="model">res.partner.hobby</field>
        <field name="arch" type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only" />
                        <h1><field name="name" /></h1>
                    </div>
                    <notebook>
                        <page name="partners" string="Partners">
                            <field name="partner_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_hobby_search_view">
        <field name="name">res.partner.hobby.search (in partner_contact_hobby)</field>
        <field name="model">res.partner.hobby</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
            </search>
        </field>
    </record>

    <record model="ir.ui.view" id="res_partner_hobby_tree_view">
        <field name="name">res.partner.hobby.tree (in partner_contact_hobby)</field>
        <field name="model">res.partner.hobby</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="res_partner_hobby_act_window">
        <field name="name">Partner Contact Hobby</field>
        <field name="res_model">res.partner.hobby</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>

    <record model="ir.ui.menu" id="res_partner_hobby_menu">
        <field name="name">Hobbies</field>
        <field name="parent_id" ref="contacts.res_partner_menu_config" />
        <field name="action" ref="res_partner_hobby_act_window" />
        <field name="sequence" eval="16" />
    </record>

</odoo>
