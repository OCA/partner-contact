<odoo>
    <record id="partner_name_history_view_form" model="ir.ui.view">
        <field name="name">Form view for History of partner name</field>
        <field name="model">partner.name.history</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="partner_id" />
                        <field name="old_name" />
                        <field name="change_date" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_name_history_view_tree" model="ir.ui.view">
        <field name="name">Tree view for History of partner name</field>
        <field name="model">partner.name.history</field>
        <field name="arch" type="xml">
            <tree create="false" delete="false" editable="bottom">
                <field name="partner_id" />
                <field name="old_name" />
                <field name="change_date" />
            </tree>
        </field>
    </record>
</odoo>
