<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <page name="sales_purchases" position="after">
                    <page name="report_logos" string="Report Logos">
                        <group string="Report Logos">
                            <field name="logo_ids" widget="many2many_kanban" nolabel="1">
                                <kanban>
                                    <field name="name"/>
                                    <field name="image"/>
                                    <templates>
                                        <t t-name="kanban-box">
                                            <a t-if="! read_only_mode" type="delete" style="position: absolute; right: 0; padding: 4px; diplay: inline-block">X</a>
                                            <a type="open">
                                                <img t-att-src="'data:image/png;base64,'+record.image.raw_value" style="max-width:600px"/>
                                            </a>
                                            <div><field name="company_id"/></div>
                                            <div><field name="name"/></div>
                                        </t>
                                    </templates>
                                </kanban>
                            </field>
                        </group>
                    </page>
                </page>
            </field>
        </record>

    </data>
</openerp>