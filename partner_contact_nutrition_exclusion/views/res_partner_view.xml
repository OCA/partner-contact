<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_contact_nutrition_exclusion" model="ir.ui.view">
        <field name="name">Partner Contact Nutrition Exclusions</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="partner_contact_nutrition.view_nutrition_information"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='nutrition']/group/group[@name='other_info']" position="after">
                <group name="allergen" string="Exclusions">
                    <field name="nutrition_exclusion_ids" nolabel="1"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>
