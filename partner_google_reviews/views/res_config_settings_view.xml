<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit (in partner_google_reviews)</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_geolocalize.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='base_geolocalize']" position="after">
                <div
                    class="col-12 col-lg-6 o_setting_box"
                    id="google_places_api_settings"
                >
                    <div class="o_setting_right_pane">
                        <label string="Google Places API" for="google_places_api_key" />
                        <div class="text-muted">
                            Get Google Reviews for your Contacts.
                        </div>
                        <div id="google_places_api_params" class="content-group">
                            API:
                            <field
                                name="google_places_api_key"
                                id="google_places_api_key"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
