<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="partner_contact_view_search" model="ir.ui.view">
        <field name="name">partner.skill.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="partner_skill_ids"/>
                <field name="resume_line_ids" string="Resumé" filter_domain="['|', ('resume_line_ids.name', 'ilike', self), ('resume_line_ids.description', 'ilike', self)]"/>
            </xpath>
        </field>
    </record>

    <record id="resume_line_view_form" model="ir.ui.view">
        <field name="name">partner.resume.line.form</field>
        <field name="model">partner.resume.line</field>
        <field name="arch" type="xml">
            <form string="Resumé">
                <div class="oe_title">
                    <label for="name" string="Title"/>
                    <h1>
                        <field name="name" placeholder="e.g. Odoo Inc." required="True"/>
                    </h1>
                </div>
                <group>
                    <group>
                        <field name="line_type_id"/>
                        <field name="display_type" required="1"/>
                    </group>
                    <group>
                        <field name="date_start" required="True"/>
                        <field name="date_end"/>
                    </group>
                </group>
                <field name="description" placeholder="Description"/>
            </form>
        </field>
    </record>

    <record id="partner_contact_view_form" model="ir.ui.view">
        <field name="name">partner.partner.view.form.inherit.resume</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page name="partner_skills" string="Skills">
                    <div class="row">
                        <div class="o_partner_skills_editable o_partner_skills_group o_group_resume col-lg-7 d-flex">
                            <!-- This field uses a custom tree view rendered by the 'partner_resume' widget.
                                Adding fields in the tree arch below makes them accessible to the widget
                            -->
                            <field mode="tree" nolabel="1" name="resume_line_ids" widget="partner_resume">
                                <tree>
                                    <field name="line_type_id"/>
                                    <field name="name"/>
                                    <field name="description"/>
                                    <field name="date_start"/>
                                    <field name="date_end"/>
                                    <field name="display_type" invisible="1"/>
                                </tree>
                            </field>
                        </div>
                        <div class="o_partner_skills_editable o_partner_skills_group o_group_skills col-lg-5 d-flex flex-column">
                            <separator string="Skills"/>
                            <field mode="tree" nolabel="1" name="partner_skill_ids"  widget="partner_skills">
                                <tree>
                                    <field name="skill_type_id" invisible="1"/>
                                    <field name="skill_id"/>
                                    <field name="skill_level_id"/>
                                    <field name="level_progress" widget="progressbar"/>
                                </tree>
                            </field>
                        </div>
                    </div>
                </page>
            </xpath>
        </field>
    </record>

    <record id="partner_resume_line_type_tree_view" model="ir.ui.view">
        <field name="name">partner.resume.line.type.tree.view</field>
        <field name="model">partner.resume.line.type</field>
        <field name="arch" type="xml">
            <tree name="Resumé Line Types" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="partner_resume_type_action" model="ir.actions.act_window">
        <field name="name">Resumé Line Types</field>
        <field name="res_model">partner.resume.line.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_human_resources_configuration_resume"
            name="Resumé"
            parent="contacts.res_partner_menu_config"
            sequence="4"
            groups="base.group_no_one"/>

    <menuitem
        id="partner_resume_line_type_menu"
        name="Types"
        action="partner_resume_type_action"
        parent="contacts.res_partner_menu_config"
        sequence="3"
        groups="base.group_no_one"/>

    <!-- Skills -->

    <record id="partner_skill_level_view_tree" model="ir.ui.view">
        <field name="name">partner.skill.level.tree</field>
        <field name="model">partner.skill.level</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="name"/>
                <field name="level_progress" widget="progressbar"/>
            </tree>
        </field>
    </record>

    <record id="partner_skill_view_tree" model="ir.ui.view">
        <field name="name">partner.skill.tree</field>
        <field name="model">partner.skill</field>
        <field name="arch" type="xml">
            <tree string="Skill Levels">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="partner_skill_level_view_form" model="ir.ui.view">
        <field name="name">partner.skill.level.form</field>
        <field name="model">partner.skill.level</field>
        <field name="arch" type="xml">
            <form string="Skill Level">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="level_progress" string="Progress (%)"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_skills_view_form" model="ir.ui.view">
        <field name="name">partner.skills.form</field>
        <field name="model">partner.skills</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <group>
                        <group>
                            <field name="skill_type_id"/>
                            <field
                                name="skill_id"
                                domain="[('skill_type_id', '=', skill_type_id)]"
                                options="{'no_create_edit':True}"/>
                        </group>
                        <group>
                            <field name="skill_level_id" domain="[('skill_type_id', '=', skill_type_id)]"/>
                            <field name="level_progress" widget="progressbar"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_skill_view_form" model="ir.ui.view">
        <field name="name">partner.skill.form</field>
        <field name="model">partner.skill</field>
        <field name="arch" type="xml">
            <form string="Skills">
                <sheet>
                    <field name="name"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_skill_type_view_tree" model="ir.ui.view">
        <field name="name">partner.skill.type.tree</field>
        <field name="model">partner.skill.type</field>
        <field name="arch" type="xml">
            <tree string="Skill Types">
                <field name="name"/>
                <field name="skill_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="partner_skill_type_view_form" model="ir.ui.view">
        <field name="name">partner.skill.type.form</field>
        <field name="model">partner.skill.type</field>
        <field name="arch" type="xml">
            <form string="Skill Type">
                <field name="id" invisible="1"/>
                <sheet>
                    <div class="oe_title">
                        <label for="name" string="Skill Type"/>
                        <h1>
                            <field name="name" placeholder="e.g. Languages" required="True"/>
                        </h1>
                    </div>
                    <group string="Skills">
                        <field name="skill_ids" nolabel="1" context="{'default_skill_type_id': id}">
                            <tree editable="bottom">
                                <field name="name"/>
                            </tree>
                        </field>
                    </group>
                    <group string="Levels">
                        <field name="skill_level_ids" nolabel="1" context="{'default_skill_type_id': id}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="partner_skill_type_action" model="ir.actions.act_window">
        <field name="name">Skill Types</field>
        <field name="res_model">partner.skill.type</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
        id="partner_skill_type_menu"
        name="Skill Types"
        action="partner_skill_type_action"
        parent="contacts.res_partner_menu_config"
        sequence="3"
        groups="base.group_no_one"/>

</odoo>
