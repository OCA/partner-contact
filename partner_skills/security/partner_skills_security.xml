        <field name="model_id" ref="model_partner_resume_line"/>
        <field name="domain_force">[('partner_id.user_id','=',user.id)]</field>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>

    <record id="partner_skill_rule_partner" model="ir.rule">
        <field name="name">partner skill: partner: read all</field>
