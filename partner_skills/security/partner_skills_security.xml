    </record>

    <record id="partner_skill_rule_partner_update" model="ir.rule">
        <field name="name">partner skill: partner: create/write/unlink own</field>
        <field name="model_id" ref="model_partner_skills"/>
        <field name="domain_force">[('partner_id.user_id','=',user.id)]</field>
        <field name="perm_read" eval="False"/>
        <field name="groups" eval="[(4,ref('base.group_user'))]"/>
    </record>
