<odoo>
    <record id="partner_zone_module_category" model="ir.module.category">
        <field name="name">Partner zones</field>
        <field name="description">Manage Partner zones</field>
    </record>
    <!-- Access Groups -->
    <record id="partner_zone_group_user" model="res.groups">
        <field name="name">User</field>
        <field name="comment">the user can edit the zone but cannot create or delete them.</field>
        <field name="category_id" ref="partner_zone_module_category"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="partner_zone_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="comment">the user can create and remove zones.</field>
        <field name="category_id" ref="partner_zone_module_category"/>
        <field name="implied_ids" eval="[(4, ref('partner_zone_group_user'))]"/>
        <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
    </record>
</odoo>
